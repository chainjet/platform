        "description": "Get the balance of a wallet or contract on a ERC20 token",
        "parameters": [
          {
            "name": "network",
            "in": "query",
            "$ref": "#/components/parameters/network",
            "required": true
          },
          {
            "name": "tokenAddress",
            "in": "query",
            "$ref": "#/components/parameters/address",
            "required": true
          },
          {
            "name": "balanceOfAddress",
            "in": "query",
            "$ref": "#/components/parameters/address",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Token Balance Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "balance": {
                      "type": "string"
                    },
                    "tokenDecimals": {
                      "type": "integer"
                    },
                    "convertedBalance": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
