  "private": true,
  "scripts": {
    "prebuild": "npx rimraf dist && yarn",
    "postinstall": "npx patch-package && yarn build-external-components",
    "build": "yarn prepare && nest build",
    "build-external-components": "tsc -p tsconfig-external-components.json",
    "prepare": "tsc -p tsconfig.build-hardhat.json",
    "prepare-watch": "tsc -p tsconfig.build-hardhat.json --watch",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\" \"schemas/**/*.json\"",
    "start": "nest start",
    "start:dev": "yarn prepare && nest start --watch",
    "start:debug": "yarn prepare && nest start --debug --watch",
    "start:prod:api": "node dist/apps/api/main",
    "start:prod:scheduler": "node dist/apps/scheduler/main",
    "start:prod:blockchain-listener": "node dist/apps/blockchain-listener/main",
    "start:prod:runner": "node dist/apps/runner/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:units": "jest .*.spec.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/api/test/jest-e2e.json"
  },
