  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "libs/(.*)": "<rootDir>/libs/$1",
      "apps/(.*)": "<rootDir>/apps/$1",
      "@app/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@app/common": "<rootDir>/libs/common/src",
      "@app/definitions/(.*)": "<rootDir>/libs/definitions/src/$1",
      "@app/definitions": "<rootDir>/libs/definitions/src",
      "@app/emails/(.*)": "<rootDir>/libs/emails/src/$1",
      "@app/emails": "<rootDir>/libs/emails/src",
      "@blockchain/blockchain/(.*)": "<rootDir>/libs/blockchain/src/$1",
      "@blockchain/blockchain": "<rootDir>/libs/blockchain/src"
    }
